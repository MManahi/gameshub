<%= render 'shared/main' %>
<div class="mx-auto col-md-12 card card-new ">
  <h2 class="text-center">Register</h2>
  <br>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <p class="text-center text-danger"><%= devise_error_messages! %></p>
  <div class="col-md-12 text-center">
    <div class="field">
      <label><%= f.label :first_name, :class => "register-form" %></label>
      <%= f.text_field :first_name, autofocus: false, :class => "form-control" %>
    </div>
  </div>
  <div class="col-md-12 text-center">
    <div class="field">
      <label><%= f.label :last_name, :class => "register-form" %></label>
      <%= f.text_field :last_name, autofocus: false, :class => "form-control" %>
    </div>
  </div>
  <div class="col-md-12 text-center">
    <div class="field">
      <label><%= f.label :email, :class => "register-form" %></label>
      <%= f.email_field :email, autofocus: false, :class => "form-control" %>
    </div>
  </div>
  <div class="col-md-12 text-center">
    <div class="field">
      <label><%= f.label :password, :class => "register-form"%></label>
      <% if @minimum_password_length %>
        <small>(<%= @minimum_password_length %>
          characters minimum)</small>
      <% end %><br/>
      <%= f.password_field :password, autocomplete: "off", :class => "form-control"%>
    </div>
  </div>
  <div class="col-md-12 text-center">
    <div class="field">
      <%= f.label :password_confirmation, :class => "register-form" %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "off",:class => "form-control" %>
    </div>
  </div>
  <div class="col-md-12 text-center">
    <div class="actions">
      <%= f.submit "Register", :class => "btn btn-warning btn-link btn-lg" %>
    </div>
</div>
  <% end %>
<div class="separator-line "></div>
<div class="text-left">
  <p>Looking for something else? here are other alternative action(s).</p>
  <%= render "devise/shared/links" %>
</div>
</div>

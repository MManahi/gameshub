<%= render 'shared/main' %>
<div class="mx-auto col-md-12 card card-new ">
  <h2 class="text-center">Edit
    <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <div class="col-md-12 text-center">
    <div class="field">
      <label><%= f.label :first_name, :class => "register-form" %></label>
      <%= f.text_field :first_name, autofocus: false, :class => "form-control" %>
    </div>
  </div>
  <div class="col-md-12 text-center">
    <div class="field">
      <label><%= f.label :last_name, :class => "register-form" %></label>
      <%= f.text_field :last_name, autofocus: false, :class => "form-control" %>
    </div>
  </div>

  <div class="col-md-12 text-center">
    <div class="field">
      <label><%= f.label :email, :class => "register-form" %></label>
      <%= f.email_field :email, autofocus: false, :class => "form-control" %>
    </div>
  </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="text-center">Currently waiting confirmation for:
      <%= resource.unconfirmed_email %></div>
  <% end %>
  <div class="col-md-12 text-center">
    <div class="field">
      <%= f.label :current_password, :class => "register-form" %>
      <i>(we need your current password to confirm your changes)</i><br/>
      <%= f.password_field :current_password, autocomplete: "off", autofocus: false, :class => "form-control" %>
    </div>
  </div>
  <div class="col-md-12 text-center">
    <div class="field">
      <%= f.label :password, :class => "register-form" %>
      <i>(leave blank if you don't want to change it)</i>
      <% if @minimum_password_length %>
        <br/>
        <em><%= @minimum_password_length %>
          characters minimum</em>
      <% end %><br/>
      <%= f.password_field :password, autocomplete: "off", autofocus: false, :class => "form-control" %>
    </div>
  </div>
  <div class="col-md-12 text-center">
    <div class="field">
      <%= f.label :password_confirmation, :class => "register-form" %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "off", autofocus: false, :class => "form-control" %>
    </div>
  </div>
  <div class="col-md-12 text-center">
    <div class="actions">
      <%= f.submit "Update", :class => "btn btn-warning btn-link btn-lg" %>
    </div>
  </div>
<% end %>
<div class="separator-line "></div>
<div class="text-left">
  <p>Looking for something else? here are other alternative action(s).</p>
  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , :class => "btn btn-danger btn-link btn-lg"%>
  <%= link_to "Back", :back, :class => "btn btn-danger btn-link btn-lg" %>
</div>
</div>
</div>

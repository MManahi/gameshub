<%= render 'shared/main' %>
<div class="mx-auto col-md-12 card card-new ">
  <h2 class="text-center">Forgot your password?</h2>
  <br>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
  <div class="col-md-12 text-center">
    <div class="field">
      <lable><%= f.label :email, :class => "register-form" %>
        <lable>
          <%= f.email_field :email, autofocus: false, :class => "form-control" %>
        </div>
      </div>
      <div class="col-md-12 text-center">
        <div class="actions">
          <%= f.submit "Send me reset password instructions", :class => "btn btn-danger btn-link btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="separator-line "></div>
    <div class="text-left">
      <p>Looking for something else? here are other alternative action(s).</p>
      <%= render "devise/shared/links" %>
    </div>
  </div>

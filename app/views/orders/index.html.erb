<%= render 'shared/main' %>
<div class="container text-center">
  <div class="row">
    <% @orders.each do |order| %>

      <div class="col-md-12 card list">
        <h4 class="text-info">
          Order #<%= order.id %>
        </h4>
        <%= link_to order.product do %>
        <h4 class="text-success">
          Game:
          <%= order.product.name %>
        </h4>
        <h4 class="text-warning">
          Category:
          <%= order.product.category %>
        </h4>
        <%= image_tag(order.product.image_url, :class => "img-fluid p-2") %>
      <% end %>
      <h4 class="text-danger text-center">
        <%= "Price: #{order.total} $" %>
      </h4>
      <br>
      <p class="text-primary">
        <%= "Issued by: #{order.user.full_name}" unless order.user.full_name.blank? %>
      </p>
      <%= link_to 'View', order, :class => "btn btn-info btn-link btn-lg" %>
    </div>
<% end %>
</div>
<%= link_to 'Back', root_path, :class => " btn btn-defualt btn-link btn-lg" %>
</div>

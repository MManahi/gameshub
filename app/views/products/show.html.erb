<div class="wrapper">
  <div class="page-header page-header-sm" data-parallax="false">
    <div class="product-container">
      <div class="filter"></div>
      <%= image_tag(@product.image_url, class: "page-header-sm img-fluid product-image") %>
    </div>
  </div>
  <br>
  <div class="section profile-content">
    <div class="container">
      <p id="notice" class="text-center"><%= notice %></p>
      <div class="owner">
        <div class="name">
          <h1 class="title"><%= @product.name %></h1>
          <h3 class="description"><%= @product.category %></h3>
        </div>
        <br>
      </div>
      <div class="row">
        <div class="col-md-8 ml-auto mr-auto text-center">
          <p><%= @product.description %></p>
          <br>
          <h4>
            Price:
            <%= @product.price %>
            $
          </h4>
          <h4>User Ratings: Highest:
            <span class="label label-success"><%= @product.highest_rating_comment.rating %></span>, Average:
            <span class="label label-info"><%= @product.avg_rating_comment.round(2) %></span>, Lowest:
            <span class="label label-danger">
              <%= @product.lowest_rating_comment.rating %></span>
          </h4>
          <br>
          <btn class="btn btn-outline-info btn-round">
            <i class="nc-icon nc-settings-gear-65"></i>
            System Requirements</btn>
          <btn class="btn btn-outline-success btn-round">
            <i class="nc-icon nc-cart-simple"></i>
            Add to Cart</btn>
        </div>
      </div>
    </div>
  </div>
  <div class="text-center">
    <%= link_to 'Edit', edit_product_path(@product),:class => "btn btn-natural btn-link btn-lg" %>
    <%= link_to 'Browse All Games', products_path, :class => "btn btn-natural btn-link btn-lg" %></div>

</div>

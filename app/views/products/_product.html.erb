<div class="col-md-12 card list">
  <%= link_to product do %>
  <%= image_tag(product.image_url, :class => "img-fluid") %>
<% end %>
<h4 class="text-center"><%= product.name %>
</h4>
<h4 class="text-center"><%= product.category %>
</h4>
<p class="text-center"><%= truncate( product.description , length: 200) %>
</p>
<h4 class="text-center">
  Price:
  <%= product.price %>
  $
</h4>
<% if product.avg_rating_comment %>
  <h4 class="text-center">Average Ratings:
    <span class="label label-info"><%= product.avg_rating_comment.round(2) %></span></h4>
<% end %>
<p class="text-center"><%= link_to 'View', product, :class => "btn btn-info btn-link btn-lg" %>
  <%= link_to 'Edit', edit_product_path(product), :class => "btn btn-warning btn-link btn-lg" %>
  <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-link btn-lg" %>
</p>
</div>

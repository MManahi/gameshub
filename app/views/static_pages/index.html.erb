  <!-- end pricing -->
  <!-- contact come here -->
  <div class="section landing-section">
    <div class="container">
      <div class="row" id="contact">
        <div class="col-md-8 ml-auto mr-auto">
          <h2 class="text-center">Keep in touch?</h2>
          <%= flash[:notice] %>
          <%= form_with(url:"/static_pages/thank_you", method: "post", local: true) do |form| %>
          <div class="row">
            <div class="col-md-6">
              <%= form.label :name %>
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="nc-icon nc-single-02"></i>
                </span>
                <%= form.text_field :name, class: "form-control", placeholder: "Enter Name" %>
              </div>
            </div>
            <div class="col-md-6">
              <%= form.label :email %>
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="nc-icon nc-email-85"></i>
                </span>
                <%= form.text_field :email, class: "form-control", placeholder: "Enter Email" %>
              </div>
            </div>
          </div>
          <%= form.label :message %>
          <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 5 %>
          <div class="row">
            <div class="col-md-4 ml-auto mr-auto">
              <%= form.submit "Send Message", class: "btn btn-danger btn-lg btn-fill my-2" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>

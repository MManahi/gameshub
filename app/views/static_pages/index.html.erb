<!-- featured comes here -->
<div class="slides" id="carousel">
  <div class="row-fluid">
    <div class="card page-carousel">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <% @indicators.each do |indicator| %>
            <li data-target="#carouselExampleIndicators" data-slide-to="<%= indicator %>" class="<%= "active" if indicator == 0 %>"></li>
          <% end %>
        </ol>
        <div class="carousel-inner" role="listbox">
          <% @products.each do |product| %>
            <div class="carousel-item<%= " active" if product == @products.first %>">
              <%= image_tag(product.image_url, class: "d-block img-fluid") %>
              <div class="carousel-caption d-none d-md-block motto text-center shadow">
                <h3><%= product.name %></h3>
                <h4><%= product.category %></h4>
                <div class="motto text-center">
                  <br/>
                  <%= link_to 'Get it now', product, :class => "btn btn-info btn-round btn-lg" %>
                </div>
              </div>
            </div>
            <!-- slider controls -->
            <a class="left carousel-control carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <i class="fa fa-angle-left"></i>
              <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <i class="fa fa-angle-right"></i>
              <span class="sr-only">Next</span>
            </a>
          <% end %>
        </div>
      </div>

      <!-- end featured -->
      <!-- pricing come here -->

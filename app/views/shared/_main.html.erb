<div class="page-header page-header-sm" data-parallax="false">
  <div class="filter"></div>
  <div class="container">
    <div class="motto text-center">
      <h1 id="head">GAMES HUB</h1>
    </div>
  </div>
</div>
<br>
<% unless notice.nil? %>
  <div class="mx-auto col-md-6 alert alert-info alert-with-icon" data-notify="container">
    <div class="container">
      <div class="alert-wrapper">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <i class="nc-icon nc-simple-remove"></i>
        </button>
        <div class="message">
          <i class="nc-icon nc-bell-55"></i>
          <%= notice %></div>
      </div>
    </div>
  </div>
<% end %>
<% unless alert.nil? %>
  <div class="mx-auto col-md-6 alert alert-danger alert-with-icon" data-notify="container">
    <div class="container">
      <div class="alert-wrapper">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <i class="nc-icon nc-simple-remove"></i>
        </button>
        <div class="message">
          <i class="nc-icon nc-bell-55"></i>
          <%= alert %></div>
      </div>
    </div>
  </div>
<% end %>

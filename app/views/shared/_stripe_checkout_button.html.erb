<%# price has to multiplied with 100 in order to be presented with it real amount since its decimal %>
<script
  src="https://checkout.stripe.com/checkout.js" class="stripe-button"
  data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
  data-image="<%= asset_path 'logo@2x.png' %>"
  data-name= "<%= @product.name %>"
  data-description= "<%=@product.category %>"
  data-amount="<%= @product.price*100 %>">
</script>

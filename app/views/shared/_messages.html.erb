<% unless notice.nil? %>
  <div class="mx-auto col-md-8 alert alert-info alert-with-icon" data-notify="container">
    <div class="container">
      <div class="alert-wrapper">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <i class="nc-icon nc-simple-remove"></i>
        </button>
        <div class="message">
          <i class="nc-icon nc-bell-55"></i>
          <%= notice %></div>
      </div>
    </div>
  </div>
<% end %>
<% unless alert.nil? %>
  <div class="mx-auto col-md-8 alert alert-danger alert-with-icon" data-notify="container">
    <div class="container">
      <div class="alert-wrapper">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <i class="nc-icon nc-simple-remove"></i>
        </button>
        <div class="message">
          <i class="nc-icon nc-bell-55"></i>
          <%= alert %></div>
      </div>
    </div>
  </div>
<% end %>

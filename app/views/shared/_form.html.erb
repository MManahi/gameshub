<%= form_with(model: product, local: true) do |form| %>
<% if product.errors.any? %>
  <div class="mx-auto col-md-12 alert alert-danger alert-with-icon" data-notify="container">
    <div class="container">
      <div class="alert-wrapper">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <i class="nc-icon nc-simple-remove"></i>
        </button>
        <div class="message">
          <p>
            <i class="nc-icon nc-bell-55"></i>
            <%= pluralize(product.errors.count, "error") %>
            prohibited this product from being saved:
          </p>
          <br>
          <% product.errors.full_messages.each do |message| %>
            <ul>
              <li>
                <%= message %>
              </li>
            </ul>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<div class="col-md-12 text-center">
  <div class="field">
    <p>
      <label><%= form.label :name, :class => "register-form" %></label>
    </p>
    <%= form.text_field :name, id: :product_name ,:class => "form-control"%>
  </div>
</div>
<br>
<div class="col-md-12 text-center">
  <div class="field">
    <p>
      <label><%= form.label :category, :class => "register-form" %></label>
    </p>
    <%= form.text_field :category, id: :product_category ,:class => "form-control"%>
  </div>
</div>
<br>
<div class="col-md-12 text-center">
  <div class="field">
    <p><%= form.label :description %></p>
    <%= form.text_area :description, id: :product_description, :class => "form-control", :rows => "6" %>
  </div>
</div>
<br>
<div class="col-md-12 text-center">
  <div class="field">
    <p><%= form.label :image_url %></p>
    <%= form.text_field :image_url, id: :product_image_url,:class => "form-control" %>
  </div>
</div>
<br>
<div class="col-md-12 text-center">
  <div class="field">
    <p><%= form.label :price %></p>
    <%= form.text_field :price, id: :product_image_url,:class => "form-control" %>
  </div>
</div>
<br>
<div class="col-md-12 text-center">
  <div class="actions">
    <%= form.submit 'Save', :class => "btn btn-warning btn-link btn-lg" %>
  </div>
<% end %>
</div>
